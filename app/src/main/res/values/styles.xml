<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dialogTheme">@style/SplashScreen</item>

        <item name="colorPrimary">@color/appGreen</item>
        <item name="colorPrimaryDark">@color/appGreen</item>
        <item name="colorControlActivated">@color/appGreen</item>

        <item name="colorControlNormal">@color/appGreen</item>
        <item name="colorControlHighlight">@color/appGreen</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appGreen</item>
        <item name="colorPrimaryDark">@color/appGreen</item>
        <item name="colorAccent">@color/appGreen</item>
        <item name="android:textColor">@color/appBlack</item>

        <item name="colorControlActivated">@color/appGreen</item>
        <item name="colorControlNormal">@color/appGreen</item>
        <item name="colorControlHighlight">@color/appGreen</item>
    </style>


    <style name="SplashScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/appGreen</item>
        <item name="colorPrimaryDark">@color/appGreen</item>
        <item name="colorAccent">@color/appGreen</item>

        <item name="colorControlActivated">@color/appGreen</item>
        <item name="colorControlNormal">@color/appGreen</item>
        <item name="colorControlHighlight">@color/appGreen</item>
    </style>

    <style name="tabAppearance" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/appGrey</item>
        <item name="tabIndicatorColor">@color/appGreen</item>
        <item name="tabBackground">@color/appWhite</item>
        <item name="android:colorFocusedHighlight">@color/appLightGrey</item>
        <item name="tabSelectedTextColor">@color/appLightGrey</item>
        <item name="android:colorBackground">@color/appWhite</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:animateOnClick">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
