<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.affiliates.iap.iapspring2017.AccountType">

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="257dp"
        android:layout_height="149dp"
        android:src
            ="@drawable/ic_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="71dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.504" />

    <TextView
        android:id="@+id/companyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="79dp"
        android:text="Companny"
        android:textColor="@color/appGreen"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/iapStudentButton"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/logoView" />

    <TextView
        android:id="@+id/iapStudentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IAP Student"
        android:textColor="@color/appGreen"
        android:textSize="18sp"
        android:layout_marginRight="63dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/logoView" />

    <TextView
        android:id="@+id/studentProfessorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="99dp"
        android:layout_marginTop="80dp"
        android:text="Student \nProfessor"
        android:textAlignment="center"
        android:textColor="@color/appGreen"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/advisorButton"
        app:layout_constraintTop_toBottomOf="@+id/companyButton" />

    <TextView
        android:id="@+id/advisorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="89dp"
        android:text="Advisor"
        android:textColor="@color/appGreen"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/iapStudentButton"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
